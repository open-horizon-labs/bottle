{
  "name": "example-team",
  "version": "2026.01.21",
  "description": "Example team bottle - customize for your team",
  "tools": {
    "ba": "latest",
    "superego": "latest",
    "wm": "latest"
  },
  "plugins": ["ba", "superego", "wm"],
  "prerequisites": {
    "node": "Required for MCP servers (uses npx)"
  },
  "opencode_plugins": {
    "@cloud-atlas-ai/bottle": "0.2.6",
    "ba-opencode": "0.2.1",
    "superego-opencode": "0.9.1",
    "wm-opencode": "0.1.0"
  },
  "mcp_servers": {
    "figma": {
      "command": "npx",
      "args": ["-y", "figma-developer-mcp", "--stdio"],
      "env": {
        "FIGMA_API_KEY": "${FIGMA_API_KEY}"
      },
      "scope": "user"
    }
  },
  "custom_tools": {
    "opencode": {
      "install": {
        "brew": "opencode"
      },
      "version": "latest",
      "verify": "opencode --version"
    },
    "azure-cli": {
      "install": {
        "brew": "azure-cli"
      },
      "version": "latest",
      "verify": "az --version"
    }
  },
  "env_vars": {
    "EXAMPLE_PROJECT_ID": "your-project-id"
  }
}
